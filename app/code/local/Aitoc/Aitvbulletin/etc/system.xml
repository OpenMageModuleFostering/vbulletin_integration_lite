<config>
    <sections>
        <aitvbulletin translate="label" module="aitvbulletin">
            <label>vBulletin Integration</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<forum translate="label">
                    <label>Integration settings</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>aitvbulletin/config_formFieldset</frontend_model>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable vBulletin integration</label>
                            <comment><![CDATA[please refresh the cache if you change this value]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>aitvbulletin/config_backendForum</backend_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <linktitle translate="label comment">
                            <label>Forum Link Title</label>
                            <comment><![CDATA[title of the footer link to vBulletin forums<br/>please refresh the cache if you change this value]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </linktitle>
                    </fields>
                </forum>
            </groups>
        </aitvbulletin>
    </sections>
</config>